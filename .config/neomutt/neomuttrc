# where to find incoming mails
set folder = "imaps://23b1080@iitb.ac.in@imap.iitb.ac.in:993"
# where to send outgoing mails
set smtp_url = "smtp://23b1080@iitb.ac.in@smtp-auth.iitb.ac.in:587"
set pass = "`pass show email/iitb`"
set imap_pass = $pass
set smtp_pass = $pass

set from = "23b1080@iitb.ac.in"
set realname = "Awez"

# where to look for when I open neomutt
set spoolfile = "+INBOX"
# where to store/record the sent/trash/draft mails
set record = "+Sent"
set trash = "+Trash"
set postponed = "+Drafts"

# what mailboxes neomutt pays attention to
mailboxes =INBOX =Sent =Trash =Drafts =Junk

set imap_keepalive=300
set imap_idle=yes
set imap_qresync=yes
set header_cache=~/.cache/neomutt/headers
set message_cachedir=~/.cache/neomutt/
set mail_check=60
set sort=reverse-date

source '~/.config/neomutt/colorrc'
source '~/.config/neomutt/sidebarrc'
